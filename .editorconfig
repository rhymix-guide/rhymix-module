# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.php,*.html]
indent_size = 4

[*.js,*.ts,*.css,*.scss]
indent_size = 2

[*.{neon,neon.dist}]
indent_size = 4
indent_style = tab
