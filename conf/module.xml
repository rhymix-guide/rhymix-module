<?xml version="1.0" encoding="utf-8"?>
<module>
    <!-- 네임스페이스 -->
    <!--
    `Rhymix\Modules\모듈명폴더` 대신 사용할 커스텀 네임스페이스를 설정.
    이 네임스페이스 설정을 삭제하면 기본 네임스페이스인 `Rhymix\Modules\Example1`가 사용됨.
    -->
    <namespaces>
        <namespace name="VendorName\Example1" />
    </namespaces>

    <!--
    모듈의 기본 클래스를 지정합니다.
    여기에 지정된 클래스(`name` 속성)는 `\ModuleObject` 클래스를 상속해야 합니다.
    -->
    <classes>
        <class type="default" name="Src\Module" />
        <class type="install" name="Src\Module" />
    </classes>

    <actions>
        <!-- 관리페이지 대시보드 -->
        <!--
            - `admin-index` 속성으로 모듈의 관리페이지 기본 액션으로 설정.
        -->
        <action name="dispExample1AdminDashboard"
            class="Src\Module"
            admin-index="true"
            menu-name="example1AdminDashboard" />

        <!-- 모듈 설정 폼 -->
        <!--
            - `menu-index` 속성과 `menu-name` 속성을 지정하여 관리페이지 메뉴에 사용할 수 있도록 설정
        -->
        <action name="dispExample1AdminConfig"
            class="Src\Module"
            menu-index="true"
            menu-name="example1AdminConfig" />

        <!-- 모듈 설정 저장 -->
        <action name="procExample1AdminConfig" class="Src\Module" />
    </actions>

    <!-- 이벤트 핸들러 등록 -->
    <eventHandlers>
        <eventHandler before="admin.dashboard" class="Src\EventHandler" method="adminDashboard" />
    </eventHandlers>

    <!-- 관리페이지용 메뉴 -->
    <!-- 관리페이지 "설정 -> 관리자 화면 설정"에서 메뉴를 추가하는데 활용 됨 -->
    <menus>
        <menu name="example1AdminDashboard">
            <title xml:lang="ko">Example1 대시보드</title>
        </menu>
        <menu name="example1AdminConfig">
            <title xml:lang="ko">Example1 설정</title>
        </menu>
    </menus>
</module>
